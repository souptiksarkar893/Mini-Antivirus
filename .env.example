# Environment Variables Example
# Copy this file to .env and replace with your actual values

# VirusTotal API Configuration
VITE_VIRUSTOTAL_API_URL=https://www.virustotal.com/api/v3/files
VITE_VIRUSTOTAL_API_KEY=your_actual_virustotal_api_key_here

# App Configuration
VITE_APP_NAME=Mini Antivirus Scanner
VITE_APP_VERSION=1.0.0

# Mock Configuration
VITE_ENABLE_MOCK_FALLBACK=true
VITE_MOCK_SCAN_DELAY=2000

# CORS Workaround (Experimental - Security Risk!)
# Set to 'true' to attempt real API calls via CORS proxy
# WARNING: This exposes your API key and is not recommended for production
VITE_USE_CORS_PROXY=false
