{
  "version": 2,
  "name": "mini-antivirus-scanner",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_APP_NAME": "Mini Antivirus Scanner",
    "VITE_APP_VERSION": "1.0.0",
    "VITE_ENABLE_MOCK_FALLBACK": "true",
    "VITE_MOCK_SCAN_DELAY": "2000"
  }
}
